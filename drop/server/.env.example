# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/drop

# Storage Configuration
STORAGE_TYPE=local  # 'local' or 's3'

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET=drop-content
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=  # Optional, for S3-compatible services

# Local Storage Configuration (if STORAGE_TYPE=local)
LOCAL_STORAGE_PATH=./storage/uploads

# File Upload Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_ITEMS_PER_ROOM=1000

# Room Configuration
ROOM_TTL_DAYS=7
CLEANUP_CRON=0 * * * *  # Every hour

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
