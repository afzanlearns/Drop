// Drop Database Schema
// This defines the core data models for rooms and items

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A room is a shared space for content
model Room {
  id        String   @id
  createdAt DateTime @default(now())
  expiresAt DateTime
  isPinned  Boolean  @default(false)
  
  // Relations
  items RoomItem[]

  @@index([expiresAt])
  @@index([createdAt])
}

// An item is a piece of content within a room
model RoomItem {
  id        String   @id @default(cuid())
  roomId    String
  type      String   // 'text' | 'code' | 'image' | 'pdf'
  
  // Content for text/code
  content   String?  @db.Text
  
  // File metadata
  fileKey   String?  // Storage key
  fileName  String?
  fileSize  Int?
  mimeType  String?
  
  // Additional metadata as JSON
  metadata  Json?
  
  createdAt DateTime @default(now())
  
  // Relations
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([createdAt])
}
