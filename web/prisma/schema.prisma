generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Room {
  id        String   @id @default(uuid())
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
  
  contentItems ContentItem[]
}

model ContentItem {
  id        String   @id @default(uuid())
  type      String
  content   String
  originalFilename String?
  mimeType         String?
  size             Int?     @default(0)
  createdAt DateTime @default(now())
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId    String
}
